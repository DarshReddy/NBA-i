<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assignment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/steel</item>
        <item name="colorSecondaryVariant">@color/charcoal_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorText">@color/black</item>
        <item name="colorSubText">@color/steel</item>
        <item name="colorTextSolid">@color/white</item>
        <item name="colorTextHint">@color/cool_grey</item>
        <item name="colorTextOrange">@color/bright_orange</item>
    </style>

    <style name="Theme.Assignment.Text" />

    <style name="Theme.Assignment.Text.Title1">
        <item name="android:textColor">?colorText</item>
        <item name="android:textSize">@dimen/text_size1</item>
        <item name="fontFamily">@font/camphor_bold</item>
    </style>

    <style name="Theme.Assignment.Text.Title2">
        <item name="android:textColor">?colorText</item>
        <item name="android:textSize">@dimen/text_size3</item>
        <item name="fontFamily">@font/camphor_bold</item>
    </style>

    <style name="Theme.Assignment.Text.Subtitle1">
        <item name="android:textColor">?colorSubText</item>
        <item name="android:textSize">@dimen/text_size3</item>
        <item name="android:fontFamily">@font/camphor_bold</item>
    </style>

    <style name="Theme.Assignment.Text.Subtitle2">
        <item name="android:textColor">?colorSubText</item>
        <item name="android:textSize">@dimen/text_size5</item>
        <item name="android:fontFamily">@font/camphor_bold</item>
    </style>
</resources>